# to make this file runable type:[chmod 755 FILE_NAME]
# to run script in current directory type [./FILE_NAME]
echo "updating files from git"
echo ".............. Started Update Process ............." >> /home/pi/WeatherUndergroundGauge/webInterface/public/logs/bootUpdate.txt
date >> /home/pi/WeatherUndergroundGauge/webInterface/public/logs/bootUpdate.txt
echo "updating node packages..." >> /home/pi/WeatherUndergroundGauge/webInterface/public/logs/bootUpdate.txt
/usr/local/bin/npm update >> /home/pi/WeatherUndergroundGauge/webInterface/public/logs/bootUpdate.txt

echo "Checking Git Hub for updates..." >> /home/pi/WeatherUndergroundGauge/webInterface/public/logs/bootUpdate.txt
/usr/bin/git --git-dir=/home/pi/WeatherUndergroundGauge/.git pull origin master >> /home/pi/WeatherUndergroundGauge/webInterface/public/logs/bootUpdate.txt

echo "Update process complete" >> /home/pi/WeatherUndergroundGauge/webInterface/public/logs/bootUpdate.txt
echo "" >> /home/pi/WeatherUndergroundGauge/webInterface/public/logs/bootUpdate.txt
