[Unit]
Description=rGauge

[Service]
ExecStart=/bin/bash /home/pi/WeatherUndergroundGauge/autoStart
Restart=on-failure
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=rGauge
User=root
Group=root
Environment=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
Environment=NODE_ENV=production
WorkingDirectory=/home/pi/WeatherUndergroundGauge

[Install]
WantedBy=multi-user.target